<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="All Test Suite" >
    <listeners>
        <listener class-name="com.exalt.report.listeners.ReporterListener"/>
    </listeners>
    <test name="valid login">
        <classes>
            <class name="com.exalt.tests.APItest.login.LoginTest">
                <methods>
                    <include name="loginWithValidCredentialsTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="invalid login   ">
        <classes>
            <class name="com.exalt.tests.APItest.login.LoginTest">
                <methods>
                    <include name="loginWithInvalidCredentialsTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
